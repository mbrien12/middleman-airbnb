<%flat = data.flats[owner] %>

<div class="banner-wide" style="background-image: url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>')">
</div>

<div class="header-flat">
<div class="profile-flat">
  <div class="profile-info">
    <div class="profile-img">
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle avatar-small" %>
    <p><%= "#{owner}" %></p>
    </div>
    <div class="profile-location-ratings">
      <h4><%= flat.description %></h4>
      <p><%= flat.city_name %></p>
      <%=  '<i class="fa fa-star" aria-hidden="true"></i>' * flat.rating %>
      </div>
  </div>
  <form action="">
    <p>Book this flat</p>
    <div class="form-group form-inline">
   <input type="text" placeholder="checkin" class="form-control">
   <input type="text" placeholder="checkout" class="form-control">
   </div>
   <select name="guests" id="guests">
     <option value="1-guest">1 guest</option>
     <option value="2-guest">2 guest</option>
     <option value="3-guest">3 guest</option>
   </select>
  <input type="submit" value="Book it" class="btn btn-primary">
  </form>
</div>
</div>

<div class="flat-details">
  <p><strong>About this flat</strong></p>
  <p class= "font-lighter"><%= flat.description_long %></p>

  <table>
    <tr>
      <th>Amenities</th>
      <% if flat.kitchen == true  %>
      <td><%= '<i class="fa fa-cutlery" aria-hidden="true"></i> Kitchen' %></td>
      <% end %>
      <% if flat.wifi == true %>
      <td><%= '<i class="fa fa-wifi" aria-hidden="true"></i> Wifi' %></td>
      <% end %>
    </tr>
    <tr>
      <th>The space</th>
      <td>10 bedrooms</td>
    </tr>
  </table>
</div>








